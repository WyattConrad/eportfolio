<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CS360WeightTracker"
        parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_blue</item>
        <item name="colorPrimaryVariant">@color/french_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/french_blue</item>
        <item name="colorSecondaryVariant">@color/seal_brown</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>

        <item name="android:buttonCornerRadius">25dp</item>

        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/black</item>
    </style>
    <style name="EditText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:minWidth">300dp</item>
        <item name="android:maxWidth">488dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingHorizontal">16dp</item>
    </style>

    <style name="EditGoal">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:textAlignment">center</item>
        <item name="android:minWidth">100dp</item>
        <item name="android:maxWidth">200dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="HeaderText">
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">?attr/actionBarSize</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SecondaryHeaderText">
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="HeaderTextNoMarginTop" parent="@style/HeaderText">
        <item name="android:layout_marginTop">0dp</item>
    </style>
</resources>