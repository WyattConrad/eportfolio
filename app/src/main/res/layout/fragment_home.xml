<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <!-- Goal Weight Text -->
    <TextView
        android:id="@+id/goal_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="?attr/actionBarSize"
        style="@style/HeaderText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Linear Layout for the weight loss boxes -->
    <LinearLayout
        android:id="@+id/weightLossArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toBottomOf="@id/goal_text">

        <!-- Spacer at the start of the layout -->
        <View
            android:layout_width="16dp"
            android:layout_height="match_parent"/>

        <!-- First Box: Weight Lost Amount -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@android:color/black"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- Weight Lost Header Text -->
            <TextView
                android:id="@+id/weightLostHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/weight_lost"
                android:textColor="@android:color/white"
                android:textSize="20sp"/>

            <!-- Weight Lost Amount -->
            <TextView
                android:id="@+id/weightLost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="48sp"
                android:textStyle="bold"/>

            <!-- lbs. -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lbs"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

        </LinearLayout>

        <!-- Spacer in the middle -->
        <View
            android:layout_width="16dp"
            android:layout_height="match_parent"/>

        <!-- Second Box: Weight To Goal Amount -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@android:color/black"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- Weight To Goal Header Text -->
            <TextView
                android:id="@+id/weightToGoalHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/weight_to_goal"
                android:textColor="@android:color/white"
                android:textSize="20sp"/>

            <!-- Weight To Goal -->
            <TextView
                android:id="@+id/weightToGoal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="48sp"
                android:textStyle="bold"/>

            <!-- lbs. -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lbs"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

        </LinearLayout>

        <!-- Spacer at the end of the layout -->
        <View
            android:layout_width="16dp"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <!-- Recorded Weights Header Text -->
    <TextView
        android:id="@+id/recorded_weights"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/trends"
        app:layout_constraintTop_toBottomOf="@id/weightLossArea"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/SecondaryHeaderText" />

    <!-- List of recorded weights area -->
    <!-- Weight List Recycler View Used -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listArea"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recorded_weights"
        app:layout_constraintBottom_toBottomOf="parent"
        android:clipToPadding="false"
        android:paddingTop="8dp"
        android:paddingHorizontal="8dp"
        android:paddingBottom="120dp" />

    <!-- Floating Action Button (FAB) To Add New Weight -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:contentDescription="@string/submit"
        android:src="@drawable/baseline_add_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/recorded_weights"
        app:layout_constraintBottom_toBottomOf="@id/recorded_weights"
        />

</androidx.constraintlayout.widget.ConstraintLayout>