<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <!-- Goal Weight Text -->
    <TextView
        android:id="@+id/goal_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="?attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Linear Layout for the weight loss boxes -->
    <LinearLayout
        android:id="@+id/weightLossArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toBottomOf="@id/goal_text">

        <!-- Spacer at the start of the layout -->
        <View
            android:layout_width="16dp"
            android:layout_height="match_parent"/>

        <!-- First Box: Weight Lost Amount -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@android:color/black"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- Weight Lost Header Text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weight Lost:"
                android:textColor="@android:color/white"
                android:textSize="12sp"/>

            <!-- Weight Lost Amount -->
            <TextView
                android:id="@+id/weightLost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9 lbs."
                android:textColor="@android:color/white"
                android:textSize="48sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- Spacer in the middle -->
        <View
            android:layout_width="16dp"
            android:layout_height="match_parent"/>

        <!-- Second Box: Weight Loss Percentage -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@android:color/black"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- Weight Loss Percentage Header Text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weight Loss %:"
                android:textColor="@android:color/white"
                android:textSize="12sp"/>

            <!-- Weight Loss Percentage -->
            <TextView
                android:id="@+id/weightLossPercentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6%"
                android:textColor="@android:color/white"
                android:textSize="48sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- Spacer at the end of the layout -->
        <View
            android:layout_width="16dp"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <!-- Recorded Weights Header Text -->
    <TextView
        android:id="@+id/recorded_weights_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recorded Weights"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/weightLossArea"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- List of recorded weights area -->
    <!-- Weight List Recycler View Used -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recorded_weights_btn"
        android:layout_margin="16dp"/>

    <!-- Floating Action Button (FAB) To Add New Weight -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/submit"
        android:src="@drawable/baseline_add_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="100dp"
        android:layout_marginEnd="10dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>